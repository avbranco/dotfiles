# GIT
alias gs='git status '
alias ga='git add '
alias gb='git branch '
alias gc='git commit'
alias gcm='git commit -m '
alias gd='git diff'
alias go='git checkout '
alias gob='git checkout -b '
alias gk='gitk --all&'
alias gx='gitx --all'
alias gl='git log --pretty=format:"%C(yellow)%h%Cred%d%Creset - %C(cyan)%an %Creset: %s %Cgreen(%cr)"'
alias glg='git log --pretty=oneline --decorate --graph'

#RAILS 2
alias rcp='RAILS_ENV=production script/console --irb=pry'
alias rcd='RAILS_ENV=development script/console --irb=pry'
alias rcs='RAILS_ENV=staging script/console --irb=pry'
alias rct='RAILS_ENV=test script/console --irb=pry'

alias rsp='RAILS_ENV=production script/server '
alias rsd='RAILS_ENV=development script/server '
alias rss='RAILS_ENV=staging script/server '

alias rt='ruby -Ilib:test -rubygems'

#GENERAL
alias fn='find . -name $1'
alias fxp='/Applications/Firefox.app/Contents/MacOS/firefox-bin -profilemanager'
